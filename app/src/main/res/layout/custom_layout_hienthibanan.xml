<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/size10dp"
        android:text="Ban 1"
        android:id="@+id/txtTenBanAn"
        android:textStyle="bold"
        android:textSize="@dimen/size18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"></TextView>
    <ImageView
        android:layout_margin="@dimen/size10dp"
        android:id="@+id/imBanAn"
        android:layout_below="@id/txtTenBanAn"
        android:src="@drawable/banan"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"></ImageView>
    <ImageView
        android:visibility="invisible"
        android:layout_marginTop="@dimen/size5dp"
        android:layout_marginLeft="@dimen/size10dp"
        android:id="@+id/imGoiMon"
        android:layout_below="@+id/imBanAn"
        android:src="@drawable/goimon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
    <ImageView
        android:visibility="invisible"
        android:layout_margin="@dimen/size5dp"
        android:layout_marginLeft="@dimen/size5dp"
        android:id="@+id/imThanhToan"
        android:layout_toRightOf="@+id/imGoiMon"
        android:layout_below="@+id/imBanAn"
        android:src="@drawable/thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
    <ImageView
        android:visibility="invisible"
        android:layout_margin="@dimen/size5dp"
        android:layout_marginLeft="@dimen/size5dp"
        android:id="@+id/imAnButton"
        android:layout_toRightOf="@id/imThanhToan"
        android:layout_below="@+id/imBanAn"
        android:src="@drawable/anbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
</RelativeLayout>